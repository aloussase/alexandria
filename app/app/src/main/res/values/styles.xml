<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MoreButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="AboutButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DownloadButtonStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:drawableLeft">@drawable/ic_download</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:drawableStart">@drawable/ic_download</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>